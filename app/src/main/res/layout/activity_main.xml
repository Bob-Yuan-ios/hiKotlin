<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@color/teal_200"
        android:orientation="vertical">
                <Button
                    android:id="@+id/my_excButton"
                    style="@style/ButtonMargin"
                    android:layout_width="match_parent"
                    android:text="@string/hello_download_button" />

                <ProgressBar
                    android:id="@+id/my_progress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:progressTint="@color/cardview_shadow_start_color"
                    android:layout_height="22dp" />

                <TextView
                    android:id="@+id/my_textView"
                    style="@style/TextViewMargin"
                    android:text="--" />

                <Button
                    android:id="@+id/my_cancelButton"
                    style="@style/ButtonMargin"
                    android:text="@string/hello_cancel_button" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>